@model APCM.Models.SalesForce.CreateSalesForceViewModel;
<form method="post" asp-action="">
    <div class="d-flex justify-content-center">
        <h3 class="text-muted">Create SalesForce Account and Connected Contact</h3>
    </div>
    <div class="mt-4">
        <label>First Name</label>
        <input class="form-control" asp-for=@Model.firstName value=@Model.firstName placeholder="Enter first name here" required />
    </div>
    <div class="mt-4">
        <label>Last Name</label>
        <input class="form-control" asp-for=@Model.lastName value=@Model.lastName placeholder="Enter last name here" required/>
    </div>
    <div class="mt-4">
        <label>Account Name</label>
        <input class="form-control" asp-for=@Model.accountName value=@Model.accountName placeholder="Eg.: shifat98@shifattech.com"  required/>
    </div>
    <div class="mt-4">
        <label>Email</label>
        <input class="form-control" asp-for=@Model.email value=@Model.email readonly />
    </div>
    <div class="d-flex justify-content-center mt-2">
        <button type="submit" class="btn btn-primary w-25">Submit</button>
    </div>
</form>
