@model APCM.Models.JiraTicket.CreateTicketViewModel;
<form method="post" asp-action="CreateTicket">
    <div class="d-flex justify-content-center">
        <h3 class="">Create A Ticket</h3>
    </div>
    <input type="hidden" asp-for=@Model.jiraAccountId value=@Model.jiraAccountId/>
    <input type="hidden" asp-for=@Model.UserEmail value=@Model.UserEmail/>
    <input type="hidden" asp-for=@Model.UserID value=@Model.UserID />

    <div class="mt-3">
        <label>Ticket Summary</label>
        <textarea class="form-control" asp-for=@Model.Summary value=@Model.Summary placeholder="Enter ticket summary.."  rows="3" required></textarea>
    </div>
    <div class="mt-4">
        <label>Priority</label>
        <select class="form-select" asp-for=@Model.Priority required>
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
    </div>
    <div class="mt-4">
        <label>Collection Name (Optional)</label>
        <input class="form-control" asp-for=@Model.CollectionName value=@Model.CollectionName readonly/>
    </div>
    <div class="mt-4">
        <label>URL</label>
        <input class="form-control" asp-for=@Model.PrevUrl value="@Model.PrevUrl" readonly />
    </div>
    <div class="d-flex justify-content-center mt-2">
        <button type="submit" class="btn btn-primary w-25">Submit</button>
    </div>
</form>
