@model APCM.Models.JiraTicket.CreateTicketViewModel;
<form method="post" asp-action="CreateTicket">
    <div class="d-flex justify-content-center">
        <h3 class="">Create A Ticket</h3>
    </div>
    <div class="mt-3">
        <label>Ticket Summary</label>
        <input class="form-control" type="text" asp-for=@Model.Summary value=@Model.Summary placeholder="Enter ticket summary.." required  />
    </div>
    <div class="mt-4">
        <label>Collection Name? (Optional)</label>
        <input class="form-control" asp-for=@Model.CollectionName type="text" value=@Model.CollectionName placeholder="Enter collection name"/>
    </div>
    <div class="mt-4">
        <label>URL</label>
        <input class="form-control" asp-for=@Model.PrevUrl value="@Model.PrevUrl" readonly />
    </div>
    <div class="mt-4">
        <label>Priority</label>
        <select class="form-select" asp-for=@Model.Priority required>
            <option value="low">Low</option>
            <option value="medium">Medium</option>
            <option value="high">High</option>
        </select>
    </div>
    <div class="mt-4">
        <label>Description</label>
        <textarea class="form-control"  asp-for=@Model.Description rows="3" value=@Model.Description placeholder="Describe.." required></textarea>
    </div>
    <div class="d-flex justify-content-center mt-2">
        <button type="submit" class="btn btn-primary w-25">Submit</button>
    </div>
</form>
